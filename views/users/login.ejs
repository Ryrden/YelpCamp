<% layout('layouts/boilerplate') %>

<div class="container justify-content-center align-items-center mt-3">
	<div class="row">
		<div class="col-md-6 offset-md-3 col-lg-4 offset-lg-4">
			<div class="card shadow">
				<img class="img-fluid" src="https://images.unsplash.com/photo-1568576550491-185584b2145a?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=774&q=80"
						alt="campground sign">
				<div class="card-body">
					<h5 class="card-title">Login</h5>
					<form action="/login" method="post" class="validated-form" novalidate>
						<div class="mb-3">
							<label class="form-label" for="username">Username</label>
							<input class="form-control" type="text" id="username"
									autofocus name="username" required />
						</div>
						<div class="mb-3">
							<label class="form-label" for="password">Password</label>
							<input class="form-control" type="password" id="password"
									name="password" required />
						</div>
						<button class="btn btn-success">Login</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>