<%- layout('layouts/boilerplate') %>

<div class="text-center">
	<div class="display-3 mb-3">Campgrounds by <%= currentUser.username.slice(0,1).toUpperCase()
        + currentUser.username.slice(1) %></div>
</div>

<div class="container">
	<section class="row">
		<% campgrounds.forEach((camp,index) => { %>
		<div class="col-lg-4 col-md-6 col-sm-12">
			<div class="card mb-3 ">
				<img class="card-img-top" alt=""
						src="<%= camp.images[0] ? camp.images[0].url : 'https://images.unsplash.com/photo-1468245856972-a0333f3f8293?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80' %>">
				<div class="card-body">
					<h5 class="card-title">
						<a href="/campgrounds/<%= camp._id %>"><%= camp.name %></a>
					</h5>
					<p class="card-text">
						<%= camp.description.substring(0, 75) %>...
					</p>
					<p class="card-text text-muted">
						<%= camp.location %>
					</p>
                    <a class="btn btn-primary"
                    href="/campgrounds/<%= camp._id %>">View
                <%= camp.title.substring(0,20) %>...</a>
                    <a class="card-link btn btn-info"
							href="/campgrounds/<%= camp._id %>/edit">Edit</a>
					<form class="d-inline"
							action="/campgrounds/<%= camp._id %>?_method=DELETE"
							method="POST">
						<button class="btn btn-danger">Delete</button>
					</form>
				</div>
			</div>
		</div>
		<% }) %>
	</section>
</div>